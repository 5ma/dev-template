---
import { theme } from '../tailwind-variables';

interface Props {
  srcDesktop: string;
  srcMobile: string;
  alt?: string;
  class?: string;
}

const { srcDesktop, srcMobile, alt = '', class: className }: Props = Astro.props;
---

<picture>
  <source media=`(max-width: ${theme.screens.sm})` srcset={srcMobile} />
  <source media=`(min-width: ${theme.screens.sm})` srcset={srcDesktop} />
  <img src={srcDesktop} {alt} class={className} decoding="async" />
</picture>
