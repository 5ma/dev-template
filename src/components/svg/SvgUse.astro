---
import type { ComponentProps } from 'astro/types';
import Sprite from '@/assets/svg/symbols.svg?url';
import SvgBase from '@/components/svg/SvgBase.astro';

interface Props extends ComponentProps<typeof SvgBase> {
  id: string;
}

const { id, ...otherProps } = Astro.props;
---

<SvgBase {...otherProps}>
  <use href={`${Sprite}#${id}`}></use>
</SvgBase>
