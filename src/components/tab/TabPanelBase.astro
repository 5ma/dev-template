---
interface Props {
  id: string;
  labelId: string;
  class?: string;
  children: any;
}

const { id, labelId, class: className } = Astro.props;
---

<div
  role="tabpanel"
  {id}
  aria-labelledby={labelId}
  x-bind:hidden={`activeId !== '${labelId}'`}
  class:list={[className, 'group/tabpanel']}
>
  <slot />
</div>

<style>
  [hidden] {
    display: none;
  }
</style>
